{
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: gcc.exe build active file",
      "command": "D:\\Programas\\Compilador C\\bin\\gcc.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
